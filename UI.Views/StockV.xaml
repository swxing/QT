<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QT.UI.Views"
             xmlns:vm="clr-namespace:QT.UI.ViewModels"
             xmlns:Charts="clr-namespace:QT.UI.Charts" x:Class="QT.UI.Views.StockV"
             mc:Ignorable="d" d:DesignWidth="250" Background="#FF464646" Height="45" d:DataContext="{Binding Source={x:Static vm:StockVM.DesignInstance}}" Margin="3">


    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="45"/>

            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="1" Height="25"  TextWrapping="Wrap" FontSize="20" Text="{Binding Name}" VerticalAlignment="Top"  Foreground="White" HorizontalAlignment="Center" Margin="0,1,0,0"/>
        <TextBlock Grid.Column="1" TextWrapping="Wrap" FontSize="12" Text="{Binding Symbol}" Margin="0,0,0,4" Foreground="White" HorizontalAlignment="Center" Height="14" VerticalAlignment="Bottom"/>
        <TextBlock Grid.Column="2"  Text="{Binding Price}" FontSize="18" VerticalAlignment="Center" Foreground="Red" HorizontalAlignment="Center" FontWeight="Bold"/>
        <TextBlock Grid.Column="3"  FontSize="16" Text="{Binding ChangeAmount}" VerticalAlignment="Top" Foreground="Lime" HorizontalAlignment="Center" Margin="0,5,0,0"/>
        <TextBlock Grid.Column="3"  Text="{Binding ChangePercentageString}"    VerticalAlignment="Top" Foreground="Lime" HorizontalAlignment="Center"  Height="14" Margin="0,28,0,0"/>

        <Charts:KLineChart x:Name="kChart" Grid.Column="4" Margin="0,0,1,4"/>

    </Grid>
</UserControl>
